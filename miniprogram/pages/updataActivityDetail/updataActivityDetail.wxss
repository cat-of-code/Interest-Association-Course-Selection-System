.sim-row {
  position: relative;
  display: flex;
  flex-wrap: nowrap;
  align-items: center;
  padding: 24rpx;
  background-color: rgb(255, 255, 255);
  border-top: 1px solid #eee;
  border-bottom: 1px solid #eee;
  justify-content: space-between;
  margin: 20rpx 0;
}
.sim-row>text,.sim-row>view {
  color: #333;
}

.sim-text-deleted {
  text-decoration: line-through;
}
.sim-text-center {
  text-align: center;
}
.sim-text-right {
  text-align: right;
}

.sim-arrow-right {
  position: absolute;
  right: 15px;
  top: 50%;
  display: inline-block;
  height: 6px;
  width: 6px;
  border-width: 2px 2px 0 0;
  border-color: #333;
  border-style: solid;
  transform: translateY(-50%) matrix(0.71, 0.71, -0.71, 0.71, 0, 0);
}

.sim-arrow-bottom {
  display: inline-block;
  width: 0;
  height: 0;
  border-left: 8rpx solid transparent;
  border-right: 8rpx solid transparent;
  border-top: 10rpx solid #999;
  transform: translate(0, -50%);
}

.sim-clearfix {
  zoom: 1;
}
.sim-clearfix::after {
  content: '';
  display: table;
  clear: both;
}


.fa {
  margin: 0 8rpx 0 5rpx;
}

view, text, navigator, input, button {
  font-size: 28rpx;
}

.text-h1 {
  font-size: 52rpx;
}
.text-h2 {
  font-size: 48rpx;
}
.text-h3 {
  font-size: 44rpx;
}
.text-h4 {
  font-size: 40rpx;
}
.text-h5 {
  font-size: 36rpx;
}
.text-h6 {
  font-size: 32rpx;
}
.text-small {
  font-size: 12px;
}

.sim-form {
  position: relative;
  margin-top: 20rpx;
  margin-right: 20rpx;
  margin-left: 20rpx;
  background-color: rgb(255, 255, 255);
  border-top: 10px solid #eee;
  border-right: 10px solid #eee;
  border-left: 10px solid #eee;
  border-bottom: 10px solid #eee;
  border-radius :3ch;
}

.sim-form-group,.sim-form-textarea,.sim-form-switch {
  position: relative;
  display:flexbox;
  flex-wrap: wrap;
  align-items:initial;
  padding: 20rpx 24rpx;
  background-color: rgb(255, 255, 255);
  border-top: 1px solid #eee;
  border-radius :3ch;  
}
.sim-form-group:first-child{
  border-top: none;
}
.sim-form-group>label:first-child {
  background-color: #fff;
  float: left;
  width: 160rpx;
}
.sim-form-group picker view{
  color: #666;
  
}
.sim-form-option {
  padding: 20rpx 24rpx;
  display: flex;
  flex-wrap: wrap;
  border-top: 1px solid #eee;
}
.sim-form-option>label:first-child {
  display: block;
  width: 100vw;
}
.sim-form-option>label:not(:first-child),.sim-form-option checkbox-group>label,.sim-form-option radio-group>label {
  display: flex;
  align-items: center;
  margin-top: 20rpx;
  margin-right: 30rpx;
}
.sim-form-option checkbox-group,.sim-form-option radio-group {
  display: flex;
  flex-wrap: wrap;
}

.sim-form-switch {
  justify-content: space-between;
}

.sim-form-textarea>label:first-child {
  align-self: flex-start;
  width: 200rpx;
  position: relative;
}
.sim-form-textarea textarea {
  margin: 0;
}

.sim-label {
  position: relative;
  display: inline-block;
  margin: 5px 0;
  background-color: #999;
  color: #fff;
  padding: 8rpx 12rpx;
  border-radius: 8rpx;  
}
.sim-label+.sim-label {
  margin-left: 10rpx;
}

.sim-btn {
  border-radius: 35px;
  left: 0;
  right: 0;
  margin:0 auto; 
  /* position: fixed; */
